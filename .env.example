# Django Settings
SECRET_KEY=your-secret-key-here-generate-new-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,your-backend-ip

# Database Configuration
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3
# For PostgreSQL (production):
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=your_database_name
# DATABASE_USER=your_database_user
# DATABASE_PASSWORD=your_database_password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# Email Configuration (Gmail SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# JWT Token Settings (in days)
ACCESS_TOKEN_LIFETIME_DAYS=1
REFRESH_TOKEN_LIFETIME_DAYS=30

# CORS Settings (comma-separated, no spaces)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://frontend-ip:3000
CORS_ALLOW_CREDENTIALS=True

# Backend Server IP
BACKEND_IP=your-backend-ip
BACKEND_PORT=8000
